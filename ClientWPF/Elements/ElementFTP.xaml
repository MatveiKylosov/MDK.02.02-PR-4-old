<UserControl x:Class="ClientWPF.Elements.ElementFTP"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientWPF.Elements"
             mc:Ignorable="d"
             MouseDoubleClick="OpenOrSend_Click">
    <Border BorderBrush="Black" BorderThickness="0.1px" Padding="2">
        <StackPanel Background="White" Orientation="Horizontal">
            <Grid>
                <Image Source="/Icon/folder.png" Height="50px" Width="50px" Margin="10" x:Name="FolderIcon"/>
                <Image Source="/Icon/document.png" Height="50px" Width="50px" Margin="10" x:Name="FileIcon"/>
            </Grid>
            <TextBlock x:Name="NameElement" Margin="10" Text="Директрория пример" FontSize="16" FontWeight="Bold"/>
        </StackPanel>
    </Border>
</UserControl>
